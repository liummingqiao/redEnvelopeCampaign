<view class="top">
  <view class="userinfo">
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="money"><text style="font-size: 64rpx;">{{totalMoney}}</text>元</view>
  <view class="cash_out"><text bindtap="gotoCash">余额提现</text></view>
</view>
<view class="down">
  <view class="record" style="margin-top:20rpx;" bindtap="gotoRecord">
    <view class="kuang"><text>交易记录</text><view class="open">></view></view>
  </view>
  <view class="record" bindtap="gotoQuestion"><text>常见问题</text><view class="open">></view></view>
</view>
