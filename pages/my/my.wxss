page{
  background-color: #f5f5f5;
}
.top {
  height: 40%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0;
  box-sizing: border-box;
  background-color: #fff;
} 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}
.money {
  width: 100%;
  color: red;
  margin-top: 40rpx;
  font-size: 36rpx;
  text-align: center;
}
.cash_out {
  width: 100%;
  color: #8d85b0;
  margin-top: 20rpx;
  font-size: 32rpx;
  text-align: center;
}
.down {
  width: 100%;
}
.kuang {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f5f5f5;
}
.record {
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
  color: #aaa;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
  background-color: #fff;
}
.record text {
  width: 640rpx;
}
.open {
  font-weight: bold;
}