page{
  background-color: #f5f5f5;
}
.body {
  width: 100%;
  margin-top: 0px;
}
/* 问题的样式 */
.question {
  background-color: #fff;
  width: 96%;
  margin: 20rpx 2% 0;
  border-radius: 10rpx;
}
.top {
  display: flex;
  flex-direction: row;
}
.question_left {
  color: #999;
  height: 100rpx;
  line-height: 100rpx;
  width: 85%;
  margin-left: 5%;
  font-size: 36rpx;
  border-bottom: 1px solid #f5f5f5;
}
.open {
  display: block;
  color: #999;
  width: 5%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #f5f5f5;
  font-size: 36rpx;
}
/* 解决问题的方案的样式 */
.answer {
  padding: 20rpx 5%;
  width: 90%;
  font-size: 36rpx;
  line-height: 60rpx;
}