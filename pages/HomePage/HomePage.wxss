/* 定义一个容器 */
.container{
  width: 100%;
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}
/* 动画效果一 */
.con1{
  margin:0 auto;
  width:700rpx;
  height: 200rpx;
  margin-top: 30rpx;
  border: 1px solid #e5e5e5;
  animation:myfirst 2s;
  border-radius: 3%;
  position: relative;
}
@keyframes myfirst
{
0%   { left:0; top:100vh;}
100% { left:0px; top:0px;}
}
