/* pages/participant/task_content/task_content.wxss */

page {
  height: 100%;
  background-color: #f5f5f5;
}

/*清除浮动*/

.clearfix {
  clear: both;
  overflow: hidden;
  zoom: 1;
}

.body {
  height: 100%;
}

.top {
  position: relative;
  height: 550rpx;
  background-color: #c63329;
}

/* 可以调钱额度的位置 */

.hongbaoedu {
  position: absolute;
  left: 250rpx;
  top: 260rpx;
  background-color: #eecc9c;
  color: #d3332b;
  line-height: 250rpx;
  text-align: center;
  font-size: 54rpx;
  height: 250rpx;
  width: 250rpx;
  border-radius: 100%;
}

.topzi {
  padding-top: 50rpx;
  width: 80%;
  display: block;
  color: #eecc9c;
  margin: 0 auto;
  text-align: center;
}

.Redenvelopes {
  width: 100%;
  height: 400rpx;
  background-color: #dc3a2f;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
  box-shadow: 1px 1px 10px 5px rgba(0, 0, 0, 0.08);
}

.Taskpicture {
  background-color: white;
}

.Taskpicture>view {
  margin-left: 5%;
  padding-top: 10px;
  padding-bottom: 10px;
}

/* 控制人物图片的样式 */

.zbj {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-left: 5%;
  color: #9e9e9e;
  font-size: 17px;
}

.dibian {
  border-bottom-color: #efefef;
  border-bottom-style: solid;
  border-bottom-width: 1px;
  padding-bottom: 10px;
}

.dibian image {
  width: 52px;
  height: 52px;
}

button {
  width: 90%;
  margin: 0 auto;
  color: white;
  margin-top: 70rpx;
  background-color: #dc3a2f;
}

.but {
  float: right;
}

.add {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #9e9e9e;
  text-align: center;
  font-size: 100rpx;
  line-height: 90rpx;
  color: #9e9e9e;
}

input {
  float: right;
  height: 1.4rem;
}

.delete {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background: red;
  left: 130rpx;
  top: 620rpx;
  border-radius: 50%;
  color: white;
  font-size: 50rpx;
  line-height: 40rpx;
  text-align: center;
}
